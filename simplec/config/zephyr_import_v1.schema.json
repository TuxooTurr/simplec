{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "simplec.zephyr_import.v1",
  "type": "object",
  "required": ["schema", "context", "testCases"],
  "properties": {
    "schema": { "const": "simplec.zephyr_import.v1" },
    "context": {
      "type": "object",
      "required": ["platform", "feature"],
      "properties": {
        "platform": { "type": "string", "minLength": 1 },
        "feature": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "testCases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "preconditions", "status", "priority", "labels", "customFields", "steps"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "preconditions": { "type": "string" },
          "status": { "type": "string" },
          "priority": { "type": "string", "enum": ["P0", "P1", "P2", "P3"] },
          "labels": { "type": "array", "items": { "type": "string" } },
          "customFields": {
            "type": "object",
            "required": ["trace", "platform", "feature"],
            "properties": {
              "trace": { "type": "string", "minLength": 1 },
              "platform": { "type": "string", "minLength": 1 },
              "feature": { "type": "string", "minLength": 1 }
            },
            "additionalProperties": true
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["action", "testData", "result"],
              "properties": {
                "action": { "type": "string" },
                "testData": { "type": "string" },
                "result": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
